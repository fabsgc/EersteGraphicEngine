<?xml version="1.0" encoding="UTF-8"?>
<keymap>
    <context name="Default">
        <input handler="PAUSE" key="P" button="START"/>
        <input handler="QUIT" key="ESCAPE" button="BACK"/>
        <input handler="FULLSCREEN" key="CTRL+ENTER" button=""/>
    </context>
    <context name="Game">
        <input handler="PAUSE" key="P" button="START"/>
        <input handler="QUIT" key="ESCAPE" button="BACK"/>
        <input handler="ZOOM_UP" key="ADD" button="RB"/>
        <input handler="ZOOM_DOWN" key="SUBTRACT" button="LB"/>
        <input handler="GO_UP" key="SPACE" button=""/>
        <input handler="GO_DOWN" key="SHIFT" button=""/>
        <input handler="GO_FORWARD" key="Z" button=""/>
        <input handler="GO_BACKWARD" key="S" button=""/>
        <input handler="GO_LEFT" key="Q" button=""/>
        <input handler="GO_RIGHT" key="D" button=""/>
        <input handler="FULLSCREEN" key="CTRL+ENTER" button=""/>
    </context>
    <context name="Pause">
        <input handler="PAUSE" key="P" button="START"/>
        <input handler="QUIT" key="ESCAPE" button="BACK"/>
        <input handler="FULLSCREEN" key="CTRL+ENTER" button=""/>
    </context>
</keymap>